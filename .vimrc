execute pathogen#infect()

" Enable filetypes
filetype on
filetype plugin on
filetype indent on
syntax on

" Use chapa.vim default mappings
let g:chapa_default_mappings = 1

set updatetime=250
let g:gitgutter_sign_column_always = 1

let g:molokai_original = 1
colorscheme molokai

"Show lines numbers"
set relativenumber
set number
